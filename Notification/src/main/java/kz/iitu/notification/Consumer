import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.stereotype.Service;

import java.io.IOException;

@Service
public class Consumer {


    @KafkaListener(topics = "user_requests", groupId = "group_id")
    public void consume(UserRequest userRequest) throws IOException {
        System.out.println(String.format("#### -> Notify user by email: -> %s",
                "User " + userRequest.getUserId() + " email conversing "
                        + userRequest.getInfo().toString()));
    }
}
